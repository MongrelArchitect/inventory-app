extends layout

block content
  if !id
    h1=`Delete ${animal.commonName}`
      div=`(${animal.speciesName})`
    p Do you really want to delete this animal?
    form(method='POST' action='')
      input(
        type='hidden'
        name='id'
        required='true'
        value=animal._id
      )
      div=errors ? errors.id.msg : ''
      button(type='submit')=`Delete ${animal.speciesName}`
  else
    h1 Animal Not Found
    div No animal found with id #{id}
